@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Roller</h1>


<table class="table table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol İsmi</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <th>@item.Name</th>
        </tr>
    }
</table>

<a asp-action="RoleCreate" class="btn btn-info">Role Oluştur</a>